<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBold24">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/thsarabun</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BtnHome" parent="TextBold24">
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="BtnWhiteBlue" parent="TextBold24">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">33sp</item>
    </style>

</resources>
