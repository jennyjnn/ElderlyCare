<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBtnBlueDark</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="TextBold24">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/thsarabun</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BtnHome" parent="TextBold24">
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="BtnWhiteBlue" parent="TextBold24">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">33sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="BtnBlueWhite" parent="TextBold24">
        <item name="android:background">@color/colorBlue</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="TextRegular28">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/thsarabun</item>
        <item name="android:textColor">#3C3C3C</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
